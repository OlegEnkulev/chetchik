<Page x:Class="chetchik.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:chetchik.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Border Background="#b8d3ff" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="3" BorderBrush="Black" CornerRadius="15">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Image Source="/Resources/Images/logo.png" Width="100" Margin="5"/>
                <Label Content="ООО «Горводоканал»" VerticalAlignment="Center" FontSize="20" Margin="5"/>
            </StackPanel>
            <TextBlock Margin="5" TextAlignment="Center">ООО «Горводоканал» - Городской<LineBreak/>водоканал, предоставляющий услуги<LineBreak/>по поствавке воды в африку.</TextBlock>
            <Button Content="Войти как пользователь" Margin="5" x:Name="LoginBTN" Click="LoginBTN_Click"/>
            <Button Content="Войти как сотрудник" Margin="5" x:Name="LoginSotrBTN" Click="LoginSotrBTN_Click"/>
        </StackPanel>
    </Border>
</Page>
